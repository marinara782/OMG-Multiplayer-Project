<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="593.0" prefWidth="660.0" style="-fx-background-color: #2c3e50;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="org.example.gui.LoginWindowController">
    <children>
        <!-- Username Field -->
        <TextField fx:id="usernameField" layoutX="256.0" layoutY="234.0" promptText="Username" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />

        <!-- Password Field -->
        <PasswordField fx:id="passwordField" layoutX="256.0" layoutY="284.0" promptText="Password" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6;" />

        <!-- Login Button -->
        <Button fx:id="loginButton" layoutX="256.0" layoutY="334.0" onAction="#handleLogin" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Login" />

        <!-- Sign Up Button -->
        <Button fx:id="signupButton" layoutX="347.0" layoutY="334.0" onAction="#handleSignup" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Sign Up" />
      <Text fill="#3498db" layoutX="25.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="OMG" wrappingWidth="58.0">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Text>
      <Hyperlink layoutX="283.0" layoutY="381.0" text="Forget Password" />
        <Button fx:id="exitButton" layoutX="151.0" layoutY="504.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 50%; -fx-min-width: 50px; -fx-min-height: 50px; -fx-pref-width: 50px; -fx-pref-height: 50px; -fx-font-size: 16px;" text="X"/>
    </children>
</AnchorPane>
